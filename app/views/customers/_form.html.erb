
<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :age %>
    <%= f.input :gender %>
    <%= f.input :name %>
    <%= f.input :email_address %>
    <%= f.input :handphone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
