<%- model_class = Proposal -%>
<div class="page-header">
  <h1><%=t '.title', :default => Proposal %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:protection_type) %></dt>
      <dd><pre class="prettyprint"><%= @proposal.protection_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:premium_value) %></dt>
      <dd><pre class="prettyprint"><%= @proposal.premium_value %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:term) %></dt>
      <dd><pre class="prettyprint"><%= @proposal.term %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              proposals_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_proposal_path(@proposal), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              proposal_path(@proposal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

