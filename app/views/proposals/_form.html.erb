
<%= simple_form_for(@proposal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :customer %>
    <%= f.input :protection_type %>
    <%= f.input :premium_value %>
    <%= f.input :term %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
